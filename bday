  <script>
    const pages = document.querySelectorAll('.hidden');

    function showPage(pageId) {
      pages.forEach(page => {
        if (page.id === pageId) {
          page.classList.toggle('hidden');
        } else {
          page.classList.add('hidden');
        }
      });
    }

    document.querySelectorAll('.hidden').forEach(page => {
      page.classList.add('hidden');
    });
  </script>

  <style>
    .hidden {
      display: none;
